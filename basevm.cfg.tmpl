bootloader = '/usr/lib/xen-default/bin/pygrub'
vcpus       = '{$cpu}'
memory      = '{$mem}'
root        = '/dev/xvda2 ro'
disk        = [
                  'file:/var/virt-machines/domains/{$hostname}/disk.img,xvda2,w',
                  'file:/var/virt-machines/domains/{$hostname}/swap.img,xvda1,w',
              ]
name        = '{$hostname}'
vif         = [ 'ip={$ip},mac={$mac}' ]
on_poweroff = 'destroy'
on_reboot   = 'restart'
on_crash    = 'restart'
